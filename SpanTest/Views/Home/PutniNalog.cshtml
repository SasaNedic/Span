@model SpanTest.Models.PutniNalog

@{
    ViewBag.Title = "Forma za nalog";
}

<h2>Putni nalog</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>PutniNalog</legend>

        <div id="NamesGroup">
            <div hidden class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div hidden class="editor-field">
                @Html.EditorFor(model => model.Name, new { id = "nameEntry" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
            <div id="NamesTextBoxDiv1" class="NamesClass">
		        <label>Name: </label>
                <input type="text" name="textbox1" id="textbox1"/>
                <label>Student: </label>
                <input type="checkbox" name="checkboxStudent1" id="checkboxStudent1" class="CheckboxStudent"/>
                <label>Suvozač: </label>
                <input type="checkbox" name="checkboxPassenger1" id="checkboxPassenger1" class="CheckboxPassenger"/>
	        </div>
        </div>

        <input type="button" id="addPersonButton" value="Dodaj osobu"/>
        <input type="button" id="removePersonButton" value="Izbriši osobu"/>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartingDay)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.StartingDay, new { Id="from" })
            @Html.ValidationMessageFor(model => model.StartingDay)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndingDay)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.EndingDay, new { Id = "to" })
            @Html.ValidationMessageFor(model => model.EndingDay)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Vehicle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Vehicle)
            @Html.ValidationMessageFor(model => model.Vehicle)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VehicleRegistration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VehicleRegistration)
            @Html.ValidationMessageFor(model => model.VehicleRegistration)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VehicleOwner)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VehicleOwner)
            @Html.ValidationMessageFor(model => model.VehicleOwner)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Passenger)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Passenger)
            @Html.ValidationMessageFor(model => model.Passenger)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Reason)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Reason)
            @Html.ValidationMessageFor(model => model.Reason)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TravelRelation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TravelRelation)
            @Html.ValidationMessageFor(model => model.TravelRelation)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProjectNumber)
            @Html.ValidationMessageFor(model => model.ProjectNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Accommodation)
        </div>
        <div class="editor-field">
            @Html.CheckBoxFor(model => model.Accommodation, new { Id = "AccommodationCheckbox" })
            @Html.ValidationMessageFor(model => model.Accommodation)
        </div>

        <div hidden class="accommodation-label-hidden">
            @Html.LabelFor(model => model.AccommodationDays)
        </div>
        <div hidden class="accommodation-field-hidden">
            @Html.TextBoxFor(model => model.AccommodationDays, new { id="DaysVisit" })
            @Html.ValidationMessageFor(model => model.AccommodationDays)
        </div>
        <div hidden class="accommodation-field" id="DatesGroup">
            <div id="DateBoxDiv1" class="NamesClass">
		            <label>Datum: </label>
                    <input type="text" name="datebox1" id="datebox1" class="Date" readonly="readonly"/>
            </div>
        </div>
        <input hidden type="button" id="addAccommodationDayButton" value="Dodaj dan" class="accommodation-button"/>
        <input hidden type="button" id="removeAccommodationDayButton" value="Izbriši dan" class="accommodation-button"/>

        <div hidden class="accommodation-label">
            @Html.LabelFor(model => model.AccommodationEntry)
        </div>
        <div hidden class="accommodation-field">
            @Html.TextBoxFor(model => model.AccommodationEntry, new { @class = "Date", @readonly="readonly"})
            @Html.ValidationMessageFor(model => model.AccommodationEntry)
        </div>

        <div hidden class="accommodation-label">
            @Html.LabelFor(model => model.AccommodationExit)
        </div>
        <div hidden class="accommodation-field">
            @Html.TextBoxFor(model => model.AccommodationExit, new { @class = "Date", @readonly="readonly"})
            @Html.ValidationMessageFor(model => model.AccommodationExit)
        </div>

        <div hidden class="accommodation-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div hidden class="accommodation-field">
            @Html.EditorFor(model => model.Comment)
            @Html.ValidationMessageFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>
